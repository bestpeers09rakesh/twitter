<div class="container justify-content-center" style="width: 30rem;">
  <div class="card shadow mt-5" style="background-color:#e1f5fe;">
    <div class="card-header bg-white shadow">
      <h4 class="text-center"> SignUp</h4>
    </div>
    
    <div class="card-body">
    <%= render 'shared/errors', object: @user  %>
      <%= form_with model: @user, url: user_index_path, local:true do |form|%>
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control shadow mb-3", placeholder:"please enter email" %>
        
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control shadow mb-3", placeholder:"enter password" %>
        
        <%= form.label :password_confirmation%>
        <%= form.password_field :password_confirmation, class:"form-control shadow mb-3", placeholder:"re-enter password" %>
        
        <%= form.submit "Register", class:"shadow" %>
      <%end%>	
      <div class="float-end">
        <p class="m-1 p-0">If Already SignUp?<%= link_to "SignIn", new_session_path, class:"btn text-info"%></p>
      </div>
    </div>
  </div>
</div>
