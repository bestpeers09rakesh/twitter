<div class="container justify-content-center" style="width: 30rem;">
  <div class="card shadow mt-5" style="background-color:#e1f5fe;">
    <div class="card-header bg-white shadow">
      <h4 class="d-flex justify-content-center"> Profile </h4>
    </div>
    
    <div class="card-body">
      <%= render "shared/flash" %>
      <%= form_with model: @profile, url:profile_update_path, method: :put do |form|%>
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control shadow mb-3", placeholder:"First Name" %>

        <%= form.label :last_name %>
        <%= form.text_field :last_name, class:"form-control shadow mb-3", placeholder:"Last Name" %>

        <%= form.label :dob%>
        <%= form.date_field :dob, class: "form-control shadow mb-3"%>

        <%= form.label :mobile %>
        <%= form.number_field :mobile, class: "form-control shadow mb-3"%>

        <%= form.label :image%>
        <%= form.file_field :image, class: "form-control shadow mb-3"%>

        <%= form.submit class:"shadow" %>
    <%end%>
    </div>
  </div>
</div>
